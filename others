    </div>

    <div class="container">
        <div class="header">
            <h1>Asset Management System</h1>
            <p>Track and manage your organization assets efficiently</p>
        </div>

        <div class="stats">
            <div class="stat-card">
                <div class="stat-content">
                    <div>
                        <div class="stat-label">Total Assets</div>
                        <div class="stat-value" id="totalAssets">0</div>
                    </div>
                </div>
            </div>
            <div class="stat-card emerald">
                <div class="stat-content">
                    <div>
                        <div class="stat-label">Active Assets</div>
                        <div class="stat-value" id="activeAssets">0</div>
                    </div>
                </div>
            </div>
            <div class="stat-card violet">
                <div class="stat-content">
                    <div>
                        <div class="stat-label">Total Value</div>
                        <div class="stat-value" id="totalValue">Rs 0</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="main-grid">
            <div class="card">
                <h2 id="formTitle">Add New Asset</h2>
                <div id="assetForm">
                    <div class="form-group">
                        <label>Asset Name *</label>
                        <input type="text" id="name" placeholder="Enter asset name">
                    </div>
                    <div class="form-group">
                        <label>Type *</label>
                        <select id="type">
                            <option value="">Select Type</option>
                            <option value="Hardware">Hardware</option>
                            <option value="Software">Software</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Vehicle">Vehicle</option>
                            <option value="Equipment">Equipment</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <input type="text" id="category" placeholder="IT, Office, etc.">
                    </div>
                    <div class="form-group">
                        <label>Value (Rs)</label>
                        <input type="number" id="value" placeholder="0">
                    </div>
                    <div class="form-group">
                        <label>Purchase Date</label>
                        <input type="date" id="purchaseDate">
                    </div>
                    <div class="form-group">
                        <label>Status *</label>
                        <select id="status">
                            <option value="Active">Active</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Retired">Retired</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" id="location" placeholder="Building, Floor, Room">
                    </div>
                    <div class="form-group">
                        <label>Assigned To</label>
                        <input type="text" id="assignedTo" placeholder="Employee or Department">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea id="description" rows="3" placeholder="Additional details"></textarea>
                    </div>
                    <div class="button-group">
                        <button class="btn btn-primary" id="submitBtn" onclick="handleSubmit()">Add Asset</button>
                        <button class="btn btn-secondary" id="cancelBtn" style="display: none;" onclick="handleCancel()">Cancel</button>
                    </div>
                </div>
            </div>

            <div class="card">
                <h2>Asset Inventory</h2>
                <div class="search-filters">
                    <div class="form-group" style="margin-bottom: 0;">
                        <input type="text" id="searchInput" placeholder="Search assets..." oninput="renderAssets()">
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <select id="filterStatus" onchange="renderAssets()">
                            <option value="">All Status</option>
                            <option value="Active">Active</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Retired">Retired</option>
                        </select>
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <select id="filterType" onchange="renderAssets()">
                            <option value="">All Types</option>
                            <option value="Hardware">Hardware</option>
                            <option value="Software">Software</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Vehicle">Vehicle</option>
                            <option value="Equipment">Equipment</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="assets-list" id="assetsList">
                    <div class="empty-state">
                        <h3>No assets found</h3>
                        <p>Add your first asset to get started</p>
                    </div>
                </div>
            </div>
        </div>
