    <script>
        var assets = [];
        var editingId = null;

        function loadAssets() {
            var stored = localStorage.getItem('assets-data');
            if (stored) {
                assets = JSON.parse(stored);
            }
            updateStats();
            renderAssets();
        }

        function saveAssets() {
            localStorage.setItem('assets-data', JSON.stringify(assets));
            updateStats();
            renderAssets();
        }

        function updateStats() {
            var total = assets.length;
            var active = 0;
            var value = 0;
            
            for (var i = 0; i < assets.length; i++) {
                if (assets[i].status === 'Active') {
                    active = active + 1;
                }
                value = value + (parseFloat(assets[i].value) || 0);
            }

            document.getElementById('totalAssets').textContent = total;
            document.getElementById('activeAssets').textContent = active;
            document.getElementById('totalValue').textContent = 'Rs ' + value.toFixed(2);
        }

        function renderAssets() {
            var searchTerm = document.getElementById('searchInput').value.toLowerCase();
            var filterStatus = document.getElementById('filterStatus').value;
            var filterType = document.getElementById('filterType').value;

            var filtered = [];
            for (var i = 0; i < assets.length; i++) {
                var asset = assets[i];
                var matchSearch = asset.name.toLowerCase().indexOf(searchTerm) > -1 || 
                                   asset.type.toLowerCase().indexOf(searchTerm) > -1;
                var matchStatus = !filterStatus || asset.status === filterStatus;
                var matchType = !filterType || asset.type === filterType;
                
                if (matchSearch && matchStatus && matchType) {
                    filtered.push(asset);
                }
            }

            var assetsList = document.getElementById('assetsList');
            
            if (filtered.length === 0) {
                assetsList.innerHTML = '<div class="empty-state"><h3>No assets found</h3><p>Add your first asset to get started</p></div>';
                return;
            }

            var html = '';
            for (var i = 0; i < filtered.length; i++) {
                var asset = filtered[i];
                html = html + '<div class="asset-card">';
                html = html + '<div class="asset-header"><div>';
                html = html + '<h3 class="asset-title">' + asset.name + '</h3>';
                html = html + '<span class="status-badge status-' + asset.status.toLowerCase() + '">' + asset.status + '</span>';
                html = html + '</div><div class="asset-actions">';
                html = html + '<button class="icon-btn edit" onclick="editAsset(' + asset.id + ')">Edit</button>';
                html = html + '<button class="icon-btn delete" onclick="deleteAsset(' + asset.id + ')">Delete</button>';
                html = html + '</div></div>';
                html = html + '<div class="asset-details">';
                html = html + '<div>Type: ' + asset.type + '</div>';
                if (asset.category) {
                    html = html + '<div>Category: ' + asset.category + '</div>';
                }
                if (asset.value > 0) {
                    html = html + '<div>Value: Rs ' + parseFloat(asset.value).toFixed(2) + '</div>';
                }
                if (asset.location) {
                    html = html + '<div>Location: ' + asset.location + '</div>';
                }
                if (asset.assignedTo) {
                    html = html + '<div>Assigned: ' + asset.assignedTo + '</div>';
                }
                if (asset.purchaseDate) {
                    html = html + '<div>Purchase: ' + asset.purchaseDate + '</div>';
                }
                html = html + '</div>';
                if (asset.description) {
                    html = html + '<p style="margin-top: 1rem; font-style: italic; opacity: 0.8;">' + asset.description + '</p>';
                }
                html = html + '</div>';
            }
            assetsList.innerHTML = html;
        }

        function handleSubmit() {
            var name = document.getElementById('name').value;
            var type = document.getElementById('type').value;

            if (!name || !type) {
                alert('Please fill Name and Type fields!');
                return;
            }

            var formData = {
                name: name,
                type: type,
                category: document.getElementById('category').value,
                value: document.getElementById('value').value,
                purchaseDate: document.getElementById('purchaseDate').value,
                status: document.getElementById('status').value,
                location: document.getElementById('location').value,
                assignedTo: document.getElementById('assignedTo').value,
                description: document.getElementById('description').value
            };

            if (editingId) {
                for (var i = 0; i < assets.length; i++) {
                    if (assets[i].id === editingId) {
                        assets[i] = {
                            id: editingId,
                            name: formData.name,
                            type: formData.type,
                            category: formData.category,
                            value: formData.value,
                            purchaseDate: formData.purchaseDate,
                            status: formData.status,
                            location: formData.location,
                            assignedTo: formData.assignedTo,
                            description: formData.description
                        };
                        break;
                    }
                }
                editingId = null;
                document.getElementById('cancelBtn').style.display = 'none';
                document.getElementById('formTitle').textContent = 'Add New Asset';
                document.getElementById('submitBtn').textContent = 'Add Asset';
            } else {
                var newAsset = {
                    id: Date.now(),
                    name: formData.name,
                    type: formData.type,
                    category: formData.category,
                    value: formData.value,
                    purchaseDate: formData.purchaseDate,
                    status: formData.status,
                    location: formData.location,
                    assignedTo: formData.assignedTo,
                    description: formData.description
                };
                assets.push(newAsset);
            }

            saveAssets();
            clearForm();
        }

        function clearForm() {
            document.getElementById('name').value = '';
            document.getElementById('type').value = '';
            document.getElementById('category').value = '';
            document.getElementById('value').value = '';
            document.getElementById('purchaseDate').value = '';
            document.getElementById('status').value = 'Active';
            document.getElementById('location').value = '';
            document.getElementById('assignedTo').value = '';
            document.getElementById('description').value = '';
        }

        function editAsset(id) {
            var asset = null;
            for (var i = 0; i < assets.length; i++) {
                if (assets[i].id === id) {
                    asset = assets[i];
                    break;
                }
            }
            if (!asset) return;

            editingId = id;
            document.getElementById('name').value = asset.name;
            document.getElementById('type').value = asset.type;
            document.getElementById('category').value = asset.category || '';
            document.getElementById('value').value = asset.value || '';
            document.getElementById('purchaseDate').value = asset.purchaseDate || '';
            document.getElementById('status').value = asset.status;
            document.getElementById('location').value = asset.location || '';
            document.getElementById('assignedTo').value = asset.assignedTo || '';
            document.getElementById('description').value = asset.description || '';

            document.getElementById('formTitle').textContent = 'Edit Asset';
            document.getElementById('submitBtn').textContent = 'Update Asset';
            document.getElementById('cancelBtn').style.display = 'block';

            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function deleteAsset(id) {
            if (confirm('Delete this asset?')) {
                var newAssets = [];
                for (var i = 0; i < assets.length; i++) {
                    if (assets[i].id !== id) {
                        newAssets.push(assets[i]);
                    }
                }
                assets = newAssets;
                saveAssets();
            }
        }

        function handleCancel() {
            editingId = null;
            clearForm();
            document.getElementById('cancelBtn').style.display = 'none';
            document.getElementById('formTitle').textContent = 'Add New Asset';
            document.getElementById('submitBtn').textContent = 'Add Asset';
        }

        loadAssets();
    </script>
</body>
</html>
