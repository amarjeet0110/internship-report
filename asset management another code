            <div class="stat-card violet">
                <div class="stat-label">Total Value</div>
                <div class="stat-value" id="totalValue">‚Çπ0</div>
            </div>
        </div>

        <div class="grid">
            <div class="card" id="formCard">
                <h2 id="formTitle">Add Asset</h2>
                <div class="form-group">
                    <label>Asset Name *</label>
                    <input type="text" id="assetName" placeholder="e.g., Dell Laptop">
                </div>
                <div class="form-group">
                    <label>Type *</label>
                    <select id="assetType">
                        <option value="">Select Type</option>
                        <option value="Hardware">Hardware</option>
                        <option value="Software">Software</option>
                        <option value="Furniture">Furniture</option>
                        <option value="Vehicle">Vehicle</option>
                        <option value="Equipment">Equipment</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Value (‚Çπ)</label>
                    <input type="number" id="assetValue" placeholder="0">
                </div>
                <div class="form-group">
                    <label>Status *</label>
                    <select id="assetStatus">
                        <option value="Active">Active</option>
                        <option value="Maintenance">Maintenance</option>
                        <option value="Retired">Retired</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input type="text" id="assetLocation" placeholder="e.g., Office Floor 2">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea id="assetDesc" rows="2" placeholder="Additional details"></textarea>
                </div>
                <button class="btn" onclick="saveAsset()" id="saveBtn">Add Asset</button>
                <button class="btn" onclick="cancelEdit()" id="cancelBtn" style="display:none; margin-top:0.5rem; background:#64748b;">Cancel</button>
            </div>

            <div class="card">
                <h2>Assets Inventory</h2>
                <div class="form-group">
                    <input type="text" id="searchBox" placeholder="Search assets..." oninput="loadAssets()">
                </div>
                <div class="assets-list" id="assetsList">
                    <div class="empty">
                        <h3>No assets found</h3>
                        <p>Add your first asset to get started</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Modal -->
    <div class="modal" id="aiModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>ü§ñ AI Assistant</h2>
                <button class="btn-close" onclick="closeAI()">Close</button>
            </div>
            <div style="background: rgba(255,255,255,0.05); border-radius: 1rem; padding: 1rem; margin-bottom: 1rem; max-height: 400px; overflow-y: auto;" id="chatBox">
                <p style="opacity: 0.7; color: white;">Hello! Ask me anything about asset management.</p>
            </div>
            <div class="form-group" style="margin-bottom: 0.5rem;">
                <textarea id="aiInput" rows="3" placeholder="Type your question..."></textarea>
            </div>
            <button class="btn" onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        let currentUser = null;
        let assets = [];
        let editId = null;
        
        // Initialize users
        let users = [
            {id: 1, username: 'admin', password: 'admin123', name: 'Admin User', role: 'admin'},
            {id: 2, username: 'employee', password: 'emp123', name: 'Employee User', role: 'employee'}
        ];

        function init() {
            // Load users
            const savedUsers = localStorage.getItem('users');
            if (savedUsers) {
                users = JSON.parse(savedUsers);
            } else {
                localStorage.setItem('users', JSON.stringify(users));
            }
            
            // Check if user is already logged in
            const savedUser = sessionStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                showDashboard();
            }
            loadAssets();
        }
        
        // Initialize on page load
        window.onload = init;

        function switchTab(tab) {
            // Not needed anymore - keeping for compatibility
        }



        function handleRegister() {
            const username = document.getElementById('regUser').value.trim();
            const password = document.getElementById('regPass').value.trim();
            const name = document.getElementById('regName').value.trim();
            const role = document.getElementById('regRole').value;

            if (!username || !password || !name) {
                alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§∏‡§≠‡•Ä fields ‡§≠‡§∞‡•á‡§Ç!');
                return;
            }

            if (users.find(u => u.username === username)) {
                alert('‡§Ø‡§π username ‡§™‡§π‡§≤‡•á ‡§∏‡•á ‡§Æ‡•å‡§ú‡•Ç‡§¶ ‡§π‡•à! ‡§ï‡•É‡§™‡§Ø‡§æ ‡§¶‡•Ç‡§∏‡§∞‡§æ username ‡§ö‡•Å‡§®‡•á‡§Ç‡•§');
                return;
            }

            const newUser = {
                id: Date.now(),
                username: username,
                password: password,
                name: name,
                role: role
            };

            users.push(newUser);
            localStorage.setItem('users', JSON.stringify(users));
            
            alert('‚úÖ Registration ‡§∏‡§´‡§≤! ‡§Ö‡§¨ ‡§Ü‡§™ ‡§Ö‡§™‡§®‡•á role ‡§ï‡•á ‡§Ö‡§®‡•Å‡§∏‡§æ‡§∞ login ‡§ï‡§∞ ‡§∏‡§ï‡§§‡•á ‡§π‡•à‡§Ç‡•§');
            
            // Clear form
            document.getElementById('regUser').value = '';
            document.getElementById('regPass').value = '';
            document.getElementById('regName').value = '';
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showDashboard() {
            document.getElementById('loginPage').classList.add('hidden');
            document.getElementById('dashboard').classList.add('active');
            document.getElementById('userName').textContent = 'Welcome, ' + currentUser.name;
            document.getElementById('userBadge').textContent = currentUser.role.toUpperCase();
            document.getElementById('userBadge').className = 'badge badge-' + currentUser.role;
            
            // Hide form for employees
            if (currentUser.role === 'employee') {
                document.getElementById('formCard').style.display = 'none';
            } else {
                document.getElementById('formCard').style.display = 'block';
            }
            
            loadAssets();
        }

        function handleLogout() {
            // Clear session
            sessionStorage.clear();
            localStorage.removeItem('currentUser');
            currentUser = null;
            
            // Hide dashboard
            document.getElementById('dashboard').style.display = 'none';
            
            // Show login page
            const loginPage = document.getElementById('loginPage');
            loginPage.style.display = 'flex';
            loginPage.classList.remove('hidden');
            
            // Clear all login fields
            document.getElementById('loginUser').value = '';
            document.getElementById('loginPass').value = '';
            
            // Reset role to admin
            selectRole('admin');
            
            // Reload page to ensure clean state
            setTimeout(() => {
                location.reload();
            }, 100);
        }

        function toggleTheme() {
            document.body.classList.toggle('light-mode');
        }

        function saveAsset() {
            if (currentUser.role !== 'admin') {
                alert('‡§∏‡§ø‡§∞‡•ç‡§´ Admin ‡§π‡•Ä assets add/edit ‡§ï‡§∞ ‡§∏‡§ï‡§§‡•á ‡§π‡•à‡§Ç!');
                return;
            }

            const name = document.getElementById('assetName').value.trim();
            const type = document.getElementById('assetType').value;
            const value = document.getElementById('assetValue').value || '0';
            const status = document.getElementById('assetStatus').value;
            const location = document.getElementById('assetLocation').value.trim();
            const description = document.getElementById('assetDesc').value.trim();

            if (!name || !type || !status) {
                alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§∏‡§≠‡•Ä required fields ‡§≠‡§∞‡•á‡§Ç (Name, Type, Status)');
                return;
            }

            const asset = {
                id: editId || Date.now(),
                name: name,
                type: type,
                value: parseFloat(value),
                status: status,
                location: location,
                description: description,
                createdBy: currentUser.name,
                createdAt: editId ? assets.find(a => a.id === editId).createdAt : new Date().toISOString()
            };

            if (editId) {
                const index = assets.findIndex(a => a.id === editId);
                assets[index] = asset;
                editId = null;
                document.getElementById('formTitle').textContent = 'Add Asset';
                document.getElementById('saveBtn').textContent = 'Add Asset';
                document.getElementById('cancelBtn').style.display = 'none';
            } else {
                assets.push(asset);
            }

            localStorage.setItem('assets', JSON.stringify(assets));
            
            // Clear form
            document.getElementById('assetName').value = '';
            document.getElementById('assetType').value = '';
            document.getElementById('assetValue').value = '';
            document.getElementById('assetStatus').value = 'Active';
            document.getElementById('assetLocation').value = '';
            document.getElementById('assetDesc').value = '';
            
            loadAssets();
            alert('Asset successfully saved!');
        }

        function cancelEdit() {
            editId = null;
            document.getElementById('formTitle').textContent = 'Add Asset';
            document.getElementById('saveBtn').textContent = 'Add Asset';
            document.getElementById('cancelBtn').style.display = 'none';
            
            // Clear form
            document.getElementById('assetName').value = '';
            document.getElementById('assetType').value = '';
            document.getElementById('assetValue').value = '';
            document.getElementById('assetStatus').value = 'Active';
            document.getElementById('assetLocation').value = '';
            document.getElementById('assetDesc').value = '';
        }

        function loadAssets() {
            const savedAssets = localStorage.getItem('assets');
            if (savedAssets) {
                assets = JSON.parse(savedAssets);
            }

            const searchTerm = document.getElementById('searchBox')?.value.toLowerCase() || '';
            const filteredAssets = assets.filter(a => 
                a.name.toLowerCase().includes(searchTerm) ||
                a.type.toLowerCase().includes(searchTerm) ||
                a.location.toLowerCase().includes(searchTerm)
            );

            // Update stats
            document.getElementById('totalAssets').textContent = assets.length;
            document.getElementById('activeAssets').textContent = assets.filter(a => a.status === 'Active').length;
            document.getElementById('totalValue').textContent = '‚Çπ' + assets.reduce((sum, a) => sum + (a.value || 0), 0).toLocaleString();

            const listContainer = document.getElementById('assetsList');
            
            if (filteredAssets.length === 0) {
                listContainer.innerHTML = `
                    <div class="empty">
                        <h3>No assets found</h3>
                        <p>${searchTerm ? 'Try a different search term' : 'Add your first asset to get started'}</p>
                    </div>
                `;
                return;
            }

            listContainer.innerHTML = filteredAssets.map(asset => `
                <div class="asset-item">
                    <div class="asset-header">
                        <div>
                            <div class="asset-name">${asset.name}</div>
                            <span class="status status-${asset.status.toLowerCase()}">${asset.status}</span>
                        </div>
                        ${currentUser && currentUser.role === 'admin' ? `
                        <div class="asset-actions">
                            <button class="btn-sm btn-edit" onclick="editAsset(${asset.id})">Edit</button>
                            <button class="btn-sm btn-delete" onclick="deleteAsset(${asset.id})">Delete</button>
                        </div>
                        ` : ''}
                    </div>
                    <div class="asset-details">
                        <div><strong>Type:</strong> ${asset.type}</div>
                        <div><strong>Value:</strong> ‚Çπ${asset.value.toLocaleString()}</div>
                        <div><strong>Location:</strong> ${asset.location || 'N/A'}</div>
                        <div><strong>Created By:</strong> ${asset.createdBy}</div>
                        ${asset.description ? `<div style="grid-column: 1 / -1;"><strong>Description:</strong> ${asset.description}</div>` : ''}
                    </div>
                </div>
            `).join('');
        }

        function editAsset(id) {
            if (currentUser.role !== 'admin') {
                alert('‡§∏‡§ø‡§∞‡•ç‡§´ Admin ‡§π‡•Ä assets edit ‡§ï‡§∞ ‡§∏‡§ï‡§§‡•á ‡§π‡•à‡§Ç!');
                return;
            }

            const asset = assets.find(a => a.id === id);
            if (!asset) return;

            editId = id;
            document.getElementById('assetName').value = asset.name;
            document.getElementById('assetType').value = asset.type;
            document.getElementById('assetValue').value = asset.value;
            document.getElementById('assetStatus').value = asset.status;
            document.getElementById('assetLocation').value = asset.location;
            document.getElementById('assetDesc').value = asset.description;

            document.getElementById('formTitle').textContent = 'Edit Asset';
            document.getElementById('saveBtn').textContent = 'Update Asset';
            document.getElementById('cancelBtn').style.display = 'block';

            // Scroll to form
            document.getElementById('formCard').scrollIntoView({ behavior: 'smooth' });
        }

        function deleteAsset(id) {
            if (currentUser.role !== 'admin') {
                alert('‡§∏‡§ø‡§∞‡•ç‡§´ Admin ‡§π‡•Ä assets delete ‡§ï‡§∞ ‡§∏‡§ï‡§§‡•á ‡§π‡•à‡§Ç!');
                return;
            }

            if (confirm('‡§ï‡•ç‡§Ø‡§æ ‡§Ü‡§™ ‡§á‡§∏ asset ‡§ï‡•ã delete ‡§ï‡§∞‡§®‡§æ ‡§ö‡§æ‡§π‡§§‡•á ‡§π‡•à‡§Ç?')) {
                assets = assets.filter(a => a.id !== id);
                localStorage.setItem('assets', JSON.stringify(assets));
                loadAssets();
            }
        }

        function openAI() {
            document.getElementById('aiModal').classList.add('show');
        }

        function closeAI() {
            document.getElementById('aiModal').classList.remove('show');
        }

        async function sendMessage() {
            const input = document.getElementById('aiInput');
            const message = input.value.trim();
            
            if (!message) return;

            const chatBox = document.getElementById('chatBox');
            
            // Add user message
            chatBox.innerHTML += `<p style="margin: 0.5rem 0; padding: 0.75rem; background: rgba(59, 130, 246, 0.2); border-radius: 0.5rem; color: white;"><strong>You:</strong> ${message}</p>`;
            input.value = '';
            
            // Add loading indicator
            chatBox.innerHTML += `<p style="margin: 0.5rem 0; padding: 0.75rem; background: rgba(255, 255, 255, 0.05); border-radius: 0.5rem; color: white;" id="aiLoading"><strong>AI:</strong> Thinking...</p>`;
            chatBox.scrollTop = chatBox.scrollHeight;

            try {
                const response = await fetch("https://api.anthropic.com/v1/messages", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        model: "claude-sonnet-4-20250514",
                        max_tokens: 1000,
                        messages: [
                            { 
                                role: "user", 
                                content: `You are an AI assistant for an asset management system. Current user: ${currentUser.name} (${currentUser.role}). Total assets: ${assets.length}. User question: ${message}. Please provide helpful, concise answers about asset management.`
                            }
                        ],
                    })
                });

                const data = await response.json();
                const aiResponse = data.content[0].text;

                // Remove loading and add response
                document.getElementById('aiLoading').remove();
                chatBox.innerHTML += `<p style="margin: 0.5rem 0; padding: 0.75rem; background: rgba(255, 255, 255, 0.05); border-radius: 0.5rem; color: white;"><strong>AI:</strong> ${aiResponse}</p>`;
                chatBox.scrollTop = chatBox.scrollHeight;
                
            } catch (error) {
                document.getElementById('aiLoading').remove();
                chatBox.innerHTML += `<p style="margin: 0.5rem 0; padding: 0.75rem; background: rgba(239, 68, 68, 0.2); border-radius: 0.5rem; color: white;"><strong>Error:</strong> Could not connect to AI. Please try again.</p>`;
                chatBox.scrollTop = chatBox.scrollHeight;
            }
        }

        // Role selection functions
        let selectedRole = 'admin';

        function selectRole(role) {
            selectedRole = role;
            const adminBtn = document.getElementById('adminRoleBtn');
            const employeeBtn = document.getElementById('employeeRoleBtn');
            const demoText = document.getElementById('demoText');
            
            if (role === 'admin') {
                adminBtn.classList.add('active');
                employeeBtn.classList.remove('active');
                demoText.textContent = 'Demo: admin/admin123';
            } else {
                employeeBtn.classList.add('active');
                adminBtn.classList.remove('active');
                demoText.textContent = 'Demo: employee/emp123';
            }
        }

        function handleLogin() {
            const username = document.getElementById('loginUser').value.trim();
            const password = document.getElementById('loginPass').value.trim();
            
            if (!username || !password) {
                alert('‡§ï‡•É‡§™‡§Ø‡§æ username ‡§î‡§∞ password ‡§¶‡•ã‡§®‡•ã‡§Ç ‡§≠‡§∞‡•á‡§Ç!');
                return;
            }

            const user = users.find(u => u.username === username && u.password === password && u.role === selectedRole);
            
            if (user) {
                currentUser = user;
                sessionStorage.setItem('currentUser', JSON.stringify(user));
                
                document.getElementById('loginUser').value = '';
                document.getElementById('loginPass').value = '';
                
                showDashboard();
            } else {
                alert(`‡§ó‡§≤‡§§ credentials! ‡§Ø‡§æ ‡§Ü‡§™ ${selectedRole} ‡§®‡§π‡•Ä‡§Ç ‡§π‡•à‡§Ç‡•§`);
            }
        }

        function showRegister() {
            document.getElementById('registerModal').classList.add('show');
        }

        function hideRegister() {
            document.getElementById('registerModal').classList.remove('show');
        }

        let generatedOTP = null;
        let otpUsername = null;

        function showForgotPassword() {
            // Reset form
            document.getElementById('otpRequestSection').style.display = 'block';
            document.getElementById('otpVerifySection').style.display = 'none';
            document.getElementById('forgotUser').value = '';
            document.getElementById('otpInput').value = '';
            document.getElementById('forgotNewPass').value = '';
            document.getElementById('forgotConfirmPass').value = '';
            generatedOTP = null;
            otpUsername = null;
            
            document.getElementById('forgotModal').classList.add('show');
        }

        function hideForgotPassword() {
            document.getElementById('forgotModal').classList.remove('show');
            // Reset form
            document.getElementById('otpRequestSection').style.display = 'block';
            document.getElementById('otpVerifySection').style.display = 'none';
            generatedOTP = null;
            otpUsername = null;
        }

        function sendOTP() {
            const username = document.getElementById('forgotUser').value.trim();
            
            if (!username) {
                alert('‡§ï‡•É‡§™‡§Ø‡§æ username ‡§≠‡§∞‡•á‡§Ç!');
                return;
            }

            const user = users.find(u => u.username === username);
            
            if (!user) {
                alert('‡§Ø‡§π username registered ‡§®‡§π‡•Ä‡§Ç ‡§π‡•à!');
                return;
            }

            // Generate 6-digit OTP
            generatedOTP = Math.floor(100000 + Math.random() * 900000).toString();
            otpUsername = username;
            
            // Show OTP in alert (in real app, this would be sent via email/SMS)
            alert(`‚úÖ OTP sent successfully!\n\nYour OTP is: ${generatedOTP}\n\n(In production, this would be sent to your email/phone)`);
            
            // Show OTP verification section
            document.getElementById('otpRequestSection').style.display = 'none';
            document.getElementById('otpVerifySection').style.display = 'block';
            document.getElementById('otpSentMsg').textContent = `OTP sent to ${username}'s registered contact`;
            
            console.log('Generated OTP:', generatedOTP); // For testing
        }

        function handleForgotPassword() {
            const enteredOTP = document.getElementById('otpInput').value.trim();
            const newPass = document.getElementById('forgotNewPass').value.trim();
            const confirmPass = document.getElementById('forgotConfirmPass').value.trim();

            if (!enteredOTP || !newPass || !confirmPass) {
                alert('‡§ï‡•É‡§™‡§Ø‡§æ ‡§∏‡§≠‡•Ä fields ‡§≠‡§∞‡•á‡§Ç!');
                return;
            }

            if (enteredOTP !== generatedOTP) {
                alert('‚ùå ‡§ó‡§≤‡§§ OTP! ‡§ï‡•É‡§™‡§Ø‡§æ ‡§∏‡§π‡•Ä OTP enter ‡§ï‡§∞‡•á‡§Ç‡•§');
                return;
            }

            if (newPass !== confirmPass) {
                alert('‚ùå Passwords match ‡§®‡§π‡•Ä‡§Ç ‡§π‡•ã ‡§∞‡§π‡•á!');
                return;
            }

            if (newPass.length < 6) {
                alert('Password ‡§ï‡§Æ ‡§∏‡•á ‡§ï‡§Æ 6 characters ‡§ï‡§æ ‡§π‡•ã‡§®‡§æ ‡§ö‡§æ‡§π‡§ø‡§è!');
                return;
            }

            // Update password
            const userIndex = users.findIndex(u => u.username === otpUsername);
            users[userIndex].password = newPass;
            localStorage.setItem('users', JSON.stringify(users));
            
            alert('‚úÖ Password successfully reset! ‡§Ö‡§¨ ‡§Ü‡§™ ‡§®‡§è password ‡§∏‡•á login ‡§ï‡§∞ ‡§∏‡§ï‡§§‡•á ‡§π‡•à‡§Ç‡•§');
            
            hideForgotPassword();
        }

        // Allow Enter key to send message
        document.addEventListener('DOMContentLoaded', function() {
            // Setup role buttons
            const adminBtn = document.getElementById('adminRoleBtn');
            const employeeBtn = document.getElementById('employeeRoleBtn');
            
            if (adminBtn) {
                adminBtn.addEventListener('click', function() {
                    selectRole('admin');
                });
            }
            
            if (employeeBtn) {
                employeeBtn.addEventListener('click', function() {
                    selectRole('employee');
                });
            }
            
            // Setup login button
            const loginBtn = document.getElementById('loginBtn');
            if (loginBtn) {
                loginBtn.addEventListener('click', handleLogin);
            }
            
            // Setup register link
            const registerLink = document.getElementById('registerLink');
            if (registerLink) {
                registerLink.addEventListener('click', showRegister);
            }
            
            // Setup forgot password link
            const forgotLink = document.getElementById('forgotLink');
            if (forgotLink) {
                forgotLink.addEventListener('click', showForgotPassword);
            }
            
            // Setup register button
            const registerBtn = document.getElementById('registerBtn');
            if (registerBtn) {
                registerBtn.addEventListener('click', handleRegister);
            }
            
            // Setup back from register
            const backFromRegister = document.getElementById('backFromRegister');
            if (backFromRegister) {
                backFromRegister.addEventListener('click', hideRegister);
            }
            
            // Setup send OTP button
            const sendOtpBtn = document.getElementById('sendOtpBtn');
            if (sendOtpBtn) {
                sendOtpBtn.addEventListener('click', sendOTP);
            }
            
            // Setup resend OTP button
            const resendOtpBtn = document.getElementById('resendOtpBtn');
            if (resendOtpBtn) {
                resendOtpBtn.addEventListener('click', sendOTP);
            }
            
            // Setup reset password button
            const resetPasswordBtn = document.getElementById('resetPasswordBtn');
            if (resetPasswordBtn) {
                resetPasswordBtn.addEventListener('click', handleForgotPassword);
            }
            
            // Setup back from forgot
            const backFromForgot = document.getElementById('backFromForgot');
            if (backFromForgot) {
                backFromForgot.addEventListener('click', hideForgotPassword);
            }
            
            // AI input enter key
            const aiInput = document.getElementById('aiInput');
            if (aiInput) {
                aiInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
            }
        });

        function init() {
            // Load users
            const savedUsers = localStorage.getItem('users');
            if (savedUsers) {
                users = JSON.parse(savedUsers);
            } else {
                localStorage.setItem('users', JSON.stringify(users));
            }
            
            // Check if user is already logged in
            const savedUser = sessionStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                showDashboard();
            }
            loadAssets();
        }
        
        // Initialize on page load
        window.onload = init;
    </script>
